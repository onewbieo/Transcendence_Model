generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum MatchStatus {
  ONGOING
  FINISHED
  DRAW
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  name          String?
  passwordHash  String
  role          Role     @default(USER)
  createdAt     DateTime @default(now())
  
  matchesAsP1   Match[]  @relation("MatchPlayer1")
  matchesAsP2   Match[]  @relation("MatchPlayer2")
  wins          Match[]  @relation("MatchWinner")
}

model Match {
  id            Int           @id @default(autoincrement())
  createdAt     DateTime      @default(now())
  
  status        MatchStatus   @default(ONGOING)
  
  // players (always PVP)
  player1Id     Int
  player2Id     Int
  
  player1       User          @relation("MatchPlayer1", fields: [player1Id], references: [id], onDelete: Restrict)
  player2       User          @relation("MatchPlayer2", fields: [player2Id], references: [id], onDelete: Restrict)
  
  // score
  player1Score  Int           @default(0)
  player2Score  Int           @default(0)
  
  // winner (DRAW has null winnerId)
  winnerId      Int?
  winner        User?         @relation("MatchWinner", fields: [winnerId], references: [id], onDelete: SetNull)
  
  durationMs    Int?
  
  @@index([player1Id, createdAt])
  @@index([player2Id, createdAt])
  @@index([winnerId])
}
